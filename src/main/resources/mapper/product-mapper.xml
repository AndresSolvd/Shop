<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.sql.interfaces.IProductDao">
    <resultMap id="CustomerResultMap" type="Customer" autoMapping="false">
        <result property="id" column="id"/>
        <result property="productName" column="product_name"/>
        <result property="stock" column="stock"/>
        <result property="price" column="price"/>
        <result property="categoryId" column="category_id"/>
        <result property="supplierId" column="supplier_id"/>
    </resultMap>
    <insert id="insert" parameterType="Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (product_name, stock, price, category_id, supplier_id) VALUES (#{productName}, #{stock},
        #{price}, #{categoryId}, #{supplierId});
    </insert>
    <update id="update" parameterType="Customer">
        UPDATE product SET
        id = #{id}, product_name = #{productName}, stock = #{stock}, price = #{price}, category_id = #{categoryId},
        supplier_id = #{supplierId}
        WHERE id = #{id};
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM product WHERE id = #{id};
    </delete>
    <select id="getAll" resultMap="CustomerResultMap">
        SELECT * FROM product;
    </select>
    <select id="getById" parameterType="int" resultMap="CustomerResultMap">
        SELECT * FROM product WHERE id = #{id};
    </select>
</mapper>